<cleaner id="msedge" os="windows">
    <label>Microsoft Edge</label>
    <description>Web Browser</description>
    <option id="cookies">
        <label>Cookies</label>
        <description>Clear out cookies</description>
        <action command="delete" search="glob" path="$APPDATA\Local\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\Cookies\*" />
        <action command="delete" search="glob" path="$APPDATA\Local\Packages\Microsoft.MicrosoftEdge_*\AC\#!*\MicrosoftEdge\Cookies\*" />
    </option>
    <option id="history">
        <label>History</label>
        <description>Clean the list of visited sites</description>
        <action command="delete" search="glob" path="$APPDATA\Local\Packages\Microsoft.MicrosoftEdge_*\AC\MicrosoftEdge\History\*" />
        <action command="delete" search="glob" path="$APPDATA\Local\Packages\Microsoft.MicrosoftEdge_*\AC\#!*\MicrosoftEdge\History\*" />
    </option>
</cleaner>