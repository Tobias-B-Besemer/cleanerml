<cleaner id="system_temp_folders">
  <label>System Temp Folders</label>
  <description>A more fine graded/careful deletion of the content of the system temp folders</description>
  <option id="dot_tmp">
    <label>*.tmp</label>
    <description>Remove all files with the extension "tmp"</description>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\*.tmp"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\*.tmp"/>
  </option>
  <option id="temp_files">
    <label>temp*</label>
    <description>Remove all files starting with "temp"</description>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\temp*"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\temp*"/>
  </option>
  <option id="tmp_files">
    <label>tmp*</label>
    <description>Remove all files starting with "tmp"</description>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\tmp*"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\tmp*"/>
  </option>
  <option id="all_temp_files">
    <label>All Temp Files</label>
    <description>Remove all files of the system temp folders (Be careful!)</description>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\"/>
  </option>
</cleaner>
