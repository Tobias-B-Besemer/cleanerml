<cleaner id="system_temp_folders_more" os="windows">
  <label translate="true">System Temp Folders - More</label>
  <description>A more fine graded/careful deletion of the content of the system temp folders</description>
  <option id="dot_tmp">
    <label>*.tmp</label>
    <description>Remove all files with the extension "tmp"</description>
    <action command="delete" search="walk.all" path="%LocalAppData%\Temp\*.tmp"/>
    <action command="delete" search="walk.all" path="%WinDir%\Temp\*.tmp"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\*.tmp"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\*.tmp"/>
  </option>
  <option id="temp_files">
    <label>temp*</label>
    <description>Remove all files starting with "temp"</description>
    <action command="delete" search="walk.all" path="%LocalAppData%\Temp\temp*"/>
    <action command="delete" search="walk.all" path="%WinDir%\Temp\temp*"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\temp*"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\temp*"/>
  </option>
  <option id="tmp_files">
    <label>tmp*</label>
    <description>Remove all files starting with "tmp"</description>
    <action command="delete" search="walk.all" path="%LocalAppData%\Temp\tmp*"/>
    <action command="delete" search="walk.all" path="%WinDir%\Temp\tmp*"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\tmp*"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\tmp*"/>
  </option>
  <option id="msi_logs">
    <label>MSI-Logs</label>
    <description>Remove all files with "MSI*.log" (Microsoft Installer Logs)</description>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\MSI*.log"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\MSI*.log"/>
  </option>
  <option id="all_temp_files">
    <label>All Temp Files</label>
    <description>Remove all files of the system temp folders (Be careful!)</description>
    <action command="delete" search="walk.all" path="%LocalAppData%\Temp\"/>
    <action command="delete" search="walk.all" path="%WinDir%\Temp\"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\"/>
    <action command="delete" search="glob" path="%WinDir%\Temp\"/>
  </option>
</cleaner>
